" Minimal Vim config based on options from my neovim config

set ru
set rnu
set tgc
set number
set cursorline
set smartindent
set completeopt

set splitright
set splitbelow

set completeopt+=menu,menuone

set tabstop=2
set shiftwidth=2
set softtabstop=2
set expandtab

set foldenable
set foldcolumn=1
set foldlevel=99
set foldlevelstart=99

let mapleader=";"
let maplocalleader=";"

nmap j gj
nmap k gk
